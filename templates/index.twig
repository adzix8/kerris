{% extends "base.twig" %}

{% block content %}
	<section class="hero__section">
		<div class="container">
			<div class="w--50">
				<h2 class="hero__header">Lorem ipsum<br>dolor sit amet</h2>
				<p class="hero__description"><strong>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</strong><br>Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco.</p>
				<button class="btn btn--primary btn--with-arrow-down" type="button">Learn more</button>
			</div>
		</div>
		<div class="lines"></div>
		<div class="circles__container">
			<span class="circles__item"></span>
			<span class="circles__item"></span>
			<span class="circles__item"></span>
			<span class="circles__item"></span>
		</div>
		<div class="hero__image-container">
			<img class="hero__image" src="http://localhost/kerris/wp-content/uploads/2021/09/photo.jpg" alt="Hero Image">
		</div>
	</section>
	<section class="section">
		<div class="container">
			<h2 class="section__header w--50">How it works?</h2>
			<div class="w--100">
				<span class="separator"></span>
			</div>
			<div class="flex flex--wrap justify--center">
				{% for post in posts %}
					{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
				{% endfor %}
			</div>
		</div>
	</section>

	{% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
